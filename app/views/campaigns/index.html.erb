<% content_for :subtitle do %>
  Campaigns
<% end %>
<%= react_component 'Campaigns', { data: @campaigns, settings: @settings } %>

<script>
  function deleteActivator(){
    how = $("a:contains('Unlicensed Froala Editor')").length;
    if(how>0){
      $("a:contains('Unlicensed Froala Editor')").remove();
    }else{
      setTimeout(deleteActivator, 50);
    }
  }

  function updateFroala(){
    $('#contentInput').val($('#froala').froalaEditor('html.get'))
    setTimeout(updateFroala, 100);
  }

  $(document).ready(function(){
    setTimeout(function(){
      $('#froala').froalaEditor();
      deleteActivator();
      updateFroala();
    }, 500);
  });
</script>